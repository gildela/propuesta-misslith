    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const plans = {
                basic: { price: 950, el: document.getElementById('plan-basic') },
                standard: { price: 1800, el: document.getElementById('plan-standard') },
                premium: { price: 3000, el: document.getElementById('plan-premium') }
            };

            const extras = {
                seal: { price: 300, el: document.getElementById('extra-seal'), card: document.getElementById('extra-seal-card') },
                fragmentation: { price: 400, el: document.getElementById('extra-fragmentation') }
            };

            const totalPriceEl = document.getElementById('total-price');
            const sealNoteEl = document.getElementById('seal-note');
            let selectedPlan = 'standard';
            let currentTotal = 0;

            function animateValue(element, start, end, duration) {
                if (start === end) {
                    element.textContent = new Intl.NumberFormat('es-ES', { style: 'currency', currency: 'EUR', minimumFractionDigits: 0 }).format(end);
                    return;
                };
                let startTimestamp = null;
                const step = (timestamp) => {
                    if (!startTimestamp) startTimestamp = timestamp;
                    const progress = Math.min((timestamp - startTimestamp) / duration, 1);
                    const current = Math.floor(progress * (end - start) + start);
                    element.textContent = new Intl.NumberFormat('es-ES', { style: 'currency', currency: 'EUR', minimumFractionDigits: 0 }).format(current);
                    if (progress < 1) window.requestAnimationFrame(step);
                };
                window.requestAnimationFrame(step);
            }

            function updateTotal() {
                let newTotal = plans[selectedPlan].price;
                if (extras.fragmentation.el.checked) newTotal += extras.fragmentation.price;
                
                if (extras.seal.el.checked && selectedPlan !== 'premium') {
                    newTotal += extras.seal.price;
                    sealNoteEl.style.opacity = '1';
                } else {
                    sealNoteEl.style.opacity = '0';
                }

                animateValue(totalPriceEl, currentTotal, newTotal, 300);
                currentTotal = newTotal;
            }

            function selectPlan(planKey) {
                selectedPlan = planKey;
                Object.values(plans).forEach(plan => plan.el.classList.remove('selected'));
                plans[planKey].el.classList.add('selected');
                
                const sealToggle = extras.seal.el;
                const sealCard = extras.seal.card;

                if (planKey === 'premium') {
                    sealToggle.checked = false;
                    sealToggle.disabled = true;
                    sealCard.classList.add('opacity-50', 'cursor-not-allowed');
                } else {
                    sealToggle.disabled = false;
                    sealCard.classList.remove('opacity-50', 'cursor-not-allowed');
                }
                
                updateTotal();
            }
            
            Object.keys(plans).forEach(key => {
                plans[key].el.addEventListener('click', () => selectPlan(key));
            });

            Object.values(extras).forEach(extra => {
                if(extra.el) extra.el.addEventListener('change', updateTotal);
            });
            
            selectPlan('standard');

            const revealElements = document.querySelectorAll('.scroll-reveal');
            const revealObserver = new IntersectionObserver((entries, observer) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.classList.add('visible');
                        observer.unobserve(entry.target);
                    }
                });
            }, {
                threshold: 0.1
            });

            revealElements.forEach(el => {
                revealObserver.observe(el);
            });
        });
    </script>
</body>
